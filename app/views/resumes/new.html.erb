<h1>Movies</h1>
<div class="container" >
<%= form_for @resume, html: { multipart: true } do |f| %>   
    <%= f.label :title %> &nbsp &nbsp &nbsp &nbsp  
    <%= f.text_field :title %> 
    <br><br>
     <%= f.label :category %>   
    <%= f.text_field :category %>
    <br><br>
    <%= f.label :release_year %>  &nbsp &nbsp  &nbsp &nbsp
    <%= f.text_field :release_year %>
    <br><br>
    <%= f.label :price %> &nbsp &nbsp   &nbsp &nbsp
    <%= f.text_field :price %>  
    <br><br>   
    <%= f.label :attachment %>   
    <%= f.file_field :attachment %>   
    <br>   
    <%= f.submit "Save",class: "btn btn-secondary" %>   
 <% end %>  
 </div> 
